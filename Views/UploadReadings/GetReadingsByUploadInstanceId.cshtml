            //                         </div>`
            //                 },
            //                 "width": "10%"
            //             }
            //         ],
            //     })
            // }

            const table = new DataTable('#listCitytaps');

            table.on('click', 'tbody tr', function (e) {
                e.currentTarget.classList.toggle('selected');
